@model IEnumerable<TechPractics2.Models.EDM.OrderEntry>

@{
ViewBag.Title = GlobalResources.SiteResources.EntityCol;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var User = Session[GlobalResources.SiteResources.User] as TechPractics2.Models.EDM.User;
}
@if (User != null && (User.UserType == TechPractics2.Models.EDM.UserType.Admin || User.UserType == TechPractics2.Models.EDM.UserType.Operator))
{
    <h2>@GlobalResources.SiteResources.EntityCol</h2>

    <p>
        @Html.ActionLink(GlobalResources.SiteResources.CreateNew, "Add")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Meter)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RegNumer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person.FIO)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Meter.FullDisc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status.FullDisc)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RegNumer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FIO)
                </td>
                <td>
                    @Html.ActionLink(GlobalResources.SiteResources.Edit, "Edit", new { id = item.Id }) |
                    @Html.ActionLink(GlobalResources.SiteResources.Details, "Details", new { id = item.Id }) |
                    @Html.ActionLink(GlobalResources.SiteResources.Delete, "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>
        @Html.Label(GlobalResources.SiteResources.AccessErrorMsg, new { @class = "text-danger" })
        @Html.ActionLink(GlobalResources.SiteResources.Back, "Back", "Home")
    </p>
}